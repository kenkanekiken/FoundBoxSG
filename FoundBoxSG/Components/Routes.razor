@using FoundBoxSG.Components.Account.Shared
<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated == true && context.User.IsInRole("Banned"))
                {
                    <div class="container mt-5">
                        <div class="alert alert-danger shadow-sm p-5 text-center">
                            <i class="bi bi-exclamation-octagon-fill display-1"></i>
                            <h1 class="mt-3">Account Suspended</h1>
                            <p class="lead">Your access to FoundBoxSG has been revoked due to a violation of our terms.</p>
                            <hr />
                            <a href="Account/Logout" class="btn btn-outline-danger">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <RedirectToLogin />
                }
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
