    private async Task Send()
    {
        if (!authorized || string.IsNullOrWhiteSpace(draft))
            return;

        await using var context = await DbFactory.CreateDbContextAsync();

        var message = new Messages
        {
            MatchId = matchId,
            SenderUserId = myAppUserId,
            Content = draft.Trim(),
            IsRead = false,
            DateCreated = DateTime.Now,
            DateModified = DateTime.Now
        };

        context.Messages.Add(message);
        await context.SaveChangesAsync();

        draft = "";

        var match = await context.Matches.FindAsync(matchId);
        if (match is null) return;

        var listing = await context.Listings.FindAsync(match.ListingId);
        if (listing is null) return;

        int receiverAppUserId =
            (myAppUserId == match.MatcherUserId)
                ? listing.UserId
                : match.MatcherUserId;

        var receiverAspNetUserId = await context.AppUser
            .Where(u => u.Id == receiverAppUserId)
            .Select(u => u.AspNetUserId)
            .SingleOrDefaultAsync();

        if (string.IsNullOrWhiteSpace(receiverAspNetUserId))
            return;

        var receiverIdentityUser =
            await UserManager.FindByIdAsync(receiverAspNetUserId);

        if (!string.IsNullOrWhiteSpace(receiverIdentityUser?.Email))
        {
            var chatUrl = NavigationManager.BaseUri + "messages/chat/" + matchId;

            var body =
                "<p>Hello " + receiverIdentityUser.UserName + ",</p>" +
                "<p>You have received a new message regarding:</p>" +
                "<p><b>" + listing.Title + "</b></p>" +
                "<p>— FoundBox Team</p>";

            Console.WriteLine("EMAIL SEND ATTEMPT");

            await EmailService.SendAsync(
                receiverIdentityUser.Email,
                "📩 New message on FoundBox",
                body
            );
            Console.WriteLine("EMAIL SENT OK");

        }

        msgs = await context.Messages
            .Where(m => m.MatchId == matchId)
            .OrderBy(m => m.DateCreated)
            .ToListAsync();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await Send();
        }
    }

