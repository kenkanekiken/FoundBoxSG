@page "/appusers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FoundBoxSG.Domain
@using FoundBoxSG.Data
@implements IAsyncDisposable
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="appusers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.AppUser">
    <PropertyColumn Property="appuser => appuser.UserName" />
    <PropertyColumn Property="appuser => appuser.FullName" />
    <PropertyColumn Property="appuser => appuser.Gender" />
    <PropertyColumn Property="appuser => appuser.ProfileImageUrl" />
    <PropertyColumn Property="appuser => appuser.Nationality" />
    <PropertyColumn Property="appuser => appuser.Region" />
    <PropertyColumn Property="appuser => appuser.CreatedBy" />
    <PropertyColumn Property="appuser => appuser.ModifiedBy" />
    <PropertyColumn Property="appuser => appuser.DateCreated" />
    <PropertyColumn Property="appuser => appuser.DateModified" />

    <TemplateColumn Context="appuser">
        <a href="@($"appusers/edit?id={appuser.Id}")">Edit</a> |
        <a href="@($"appusers/details?id={appuser.Id}")">Details</a> |
        <a href="@($"appusers/delete?id={appuser.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private FoundBoxSGContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
