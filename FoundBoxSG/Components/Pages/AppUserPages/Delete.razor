@page "/appusers/delete"
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>AppUser</h2>
    <hr />
    @if (appuser is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@appuser.Gender</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProfileImageUrl</dt>
            <dd class="col-sm-10">@appuser.ProfileImageUrl</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Nationality</dt>
            <dd class="col-sm-10">@appuser.Nationality</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Region</dt>
            <dd class="col-sm-10">@appuser.Region</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@appuser.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ModifiedBy</dt>
            <dd class="col-sm-10">@appuser.ModifiedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@appuser.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateModified</dt>
            <dd class="col-sm-10">@appuser.DateModified</dd>
        </dl>
        <EditForm method="post" Model="appuser" OnValidSubmit="DeleteAppUser" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(appuser is null)">Delete</button> |
            <a href="/appusers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private AppUser? appuser;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        appuser = await context.AppUser.FirstOrDefaultAsync(m => m.Id == Id);

        if (appuser is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAppUser()
    {
        using var context = DbFactory.CreateDbContext();
        context.AppUser.Remove(appuser!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/appusers");
    }
}
