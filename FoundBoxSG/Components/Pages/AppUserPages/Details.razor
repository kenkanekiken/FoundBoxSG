@page "/appusers/details"
@using FoundBoxSG.Data
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Details</PageTitle>

<PageTitle>User Details</PageTitle>

@if (appuser is null)
{
    <div class="text-muted p-4">Loading…</div>
}
else
{
    <div class="container-fluid">
    <!-- Top bar -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
            <a href="/appusers" class="btn btn-link text-decoration-none px-0">
                <i class="bi bi-arrow-left fs-4"></i>
            </a>
        </div>

        <span class="badge bg-dark bg-opacity-10 text-dark border">
            AppUser ID: @appuser.Id
        </span>
    </div>

    <!-- Profile card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center gap-3">
                @if (!string.IsNullOrWhiteSpace(appuser.ProfileImageUrl))
                {
                    <img src="@appuser.ProfileImageUrl"
                         class="rounded-circle border"
                         style="width:72px;height:72px;object-fit:cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center border"
                         style="width:72px;height:72px;">
                        <i class="bi bi-person-fill fs-2"></i>
                    </div>
                }

                <div class="flex-grow-1">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <h4 class="mb-0 fw-semibold">
                            @(identityUser?.FullName ?? "Unknown Name")
                        </h4>
                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                            @(identityUser?.Email ?? "No email")
                        </span>
                    </div>

                    <div class="text-muted small mt-1">
                        ASP.NET User: @(identityUser?.UserName ?? "-")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info tiles -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="border rounded-3 p-3 h-100 bg-white shadow-sm">
                <div class="fw-semibold mb-2">Profile</div>
                <div class="d-flex justify-content-between py-1">
                    <div class="text-muted">Nationality</div>
                    <div class="fw-semibold">@((appuser.Nationality ?? "-"))</div>
                </div>
                <div class="d-flex justify-content-between py-1">
                    <div class="text-muted">Region</div>
                    <div class="fw-semibold">@((appuser.Region ?? "-"))</div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="border rounded-3 p-3 h-100 bg-white shadow-sm">
                <div class="fw-semibold mb-2">Audit</div>
                <div class="d-flex justify-content-between py-1">
                    <div class="text-muted">Date Created</div>
                    <div class="fw-semibold">@appuser.DateCreated</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Listings section -->
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h5 class="mb-0 fw-semibold">
            Listings Posted
            <span class="badge bg-dark bg-opacity-10 text-dark border ms-2">@userListings.Count</span>
        </h5>

        @if (userListings.Any())
        {
            <span class="text-muted small">
                Latest: @userListings.First().DateCreated
            </span>
        }
    </div>

    @if (userListings.Any())
    {
        <div class="row g-3">
            @foreach (var listing in userListings)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-start gap-3">
                            <div class="flex-grow-1">
                                <div class="d-flex flex-wrap align-items-center gap-2 mb-1">
                                    <div class="fw-semibold">@listing.Title</div>

                                    @if (listing.IsClose)
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Open</span>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(listing.ListingType))
                                    {
                                        <span class="badge bg-dark bg-opacity-10 text-dark border">
                                            @listing.ListingType
                                        </span>
                                    }
                                </div>

                                <div class="text-muted small">
                                    @listing.ItemCategory
                                </div>
                                <div class="text-muted small">
                                    📍 @listing.Location
                                </div>

                                <div class="text-muted small mt-1">
                                    Posted @listing.DateCreated
                                </div>
                            </div>

                            <a class="btn btn-sm btn-outline-primary"
                               href="@($"/listings/details?id={listing.Id}")">
                                View
                                <i class="bi bi-chevron-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border mt-3">
            <i class="bi bi-info-circle me-1"></i>
            This user has not posted any listings.
        </div>
    }
    </div>
}


@code {
    private AppUser? appuser;
    private FoundBoxSGUser? identityUser;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private List<Listings> userListings = new();

    protected override async Task OnInitializedAsync()
    {
        await using var context = await DbFactory.CreateDbContextAsync();

        appuser = await context.AppUser
        .FirstOrDefaultAsync(u => u.Id == Id);

        if (appuser is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        identityUser = await context.Users
        .FirstOrDefaultAsync(u => u.Id == appuser.AspNetUserId);


        userListings = await context.Listings
            .Where(l => l.UserId == appuser.Id)
            .OrderByDescending(l => l.DateCreated)
            .ToListAsync();
    }
}

