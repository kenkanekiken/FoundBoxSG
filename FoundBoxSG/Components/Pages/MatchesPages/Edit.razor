@page "/matches/edit"
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Matches</h2>
<hr />
@if (Matches is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Matches" OnValidSubmit="UpdateMatches" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Matches.Id" value="@Matches.Id" />
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Matches.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Matches.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="modifiedby" class="form-label">ModifiedBy:</label>
                    <InputText id="modifiedby" @bind-Value="Matches.ModifiedBy" class="form-control" />
                    <ValidationMessage For="() => Matches.ModifiedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Matches.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Matches.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datemodified" class="form-label">DateModified:</label>
                    <InputDate id="datemodified" @bind-Value="Matches.DateModified" class="form-control" />
                    <ValidationMessage For="() => Matches.DateModified" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/matches">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Matches? Matches { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Matches ??= await context.Matches.FirstOrDefaultAsync(m => m.Id == Id);

        if (Matches is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateMatches()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Matches!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!MatchesExists(Matches!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/matches");
    }

    private bool MatchesExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Matches.Any(e => e.Id == id);
    }
}
