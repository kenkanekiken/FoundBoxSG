@page "/matches/delete"
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Matches</h2>
    <hr />
    @if (matches is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FoundListingId</dt>
            <dd class="col-sm-10">@matches.FoundListingId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LostListingId</dt>
            <dd class="col-sm-10">@matches.LostListingId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@matches.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ModifiedBy</dt>
            <dd class="col-sm-10">@matches.ModifiedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@matches.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateModified</dt>
            <dd class="col-sm-10">@matches.DateModified</dd>
        </dl>
        <EditForm method="post" Model="matches" OnValidSubmit="DeleteMatches" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(matches is null)">Delete</button> |
            <a href="/matches">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Matches? matches;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        matches = await context.Matches.FirstOrDefaultAsync(m => m.Id == Id);

        if (matches is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMatches()
    {
        using var context = DbFactory.CreateDbContext();
        context.Matches.Remove(matches!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/matches");
    }
}
