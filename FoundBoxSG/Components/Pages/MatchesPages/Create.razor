@page "/matches/create"
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Matches</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Matches" OnValidSubmit="AddMatches" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="foundlistingid" class="form-label">FoundListingId:</label> 
                <InputNumber id="foundlistingid" @bind-Value="Matches.FoundListingId" class="form-control" /> 
                <ValidationMessage For="() => Matches.FoundListingId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="lostlistingid" class="form-label">LostListingId:</label> 
                <InputNumber id="lostlistingid" @bind-Value="Matches.LostListingId" class="form-control" /> 
                <ValidationMessage For="() => Matches.LostListingId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Matches.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Matches.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="modifiedby" class="form-label">ModifiedBy:</label> 
                <InputText id="modifiedby" @bind-Value="Matches.ModifiedBy" class="form-control" /> 
                <ValidationMessage For="() => Matches.ModifiedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Matches.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Matches.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datemodified" class="form-label">DateModified:</label> 
                <InputDate id="datemodified" @bind-Value="Matches.DateModified" class="form-control" /> 
                <ValidationMessage For="() => Matches.DateModified" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/matches">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Matches Matches { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddMatches()
    {
        using var context = DbFactory.CreateDbContext();
        context.Matches.Add(Matches);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/matches");
    }
}
