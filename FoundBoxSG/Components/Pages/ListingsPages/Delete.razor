@page "/listings/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using FoundBoxSG.Domain
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]
<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Listings</h2>
    <hr />
    @if (listings is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ListingType</dt>
            <dd class="col-sm-10">@listings.ListingType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@listings.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@listings.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ItemCategory</dt>
            <dd class="col-sm-10">@listings.ItemCategory</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Brand</dt>
            <dd class="col-sm-10">@listings.Brand</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@listings.Location</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UniqueFeatures</dt>
            <dd class="col-sm-10">@listings.UniqueFeatures</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Color</dt>
            <dd class="col-sm-10">@listings.Color</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">@listings.Images</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@listings.DateModified</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@listings.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ModifiedBy</dt>
            <dd class="col-sm-10">@listings.ModifiedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@listings.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateModified</dt>
            <dd class="col-sm-10">@listings.DateModified</dd>
        </dl>
        <EditForm method="post" Model="listings" OnValidSubmit="DeleteListings" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(listings is null)">Delete</button> |
            <a href="/listings">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Listings? listings;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        listings = await context.Listings.FirstOrDefaultAsync(m => m.Id == Id);

        if (listings is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteListings()
    {
        using var context = DbFactory.CreateDbContext();
        context.Listings.Remove(listings!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/listings");
    }
}
