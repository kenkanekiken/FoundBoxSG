@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@inject AuthenticationStateProvider Auth
@inject IDbContextFactory<FoundBoxSG.Data.FoundBoxSGContext> DbFactory
@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand" href="">FoundBox</a>

        <!-- Right-side controls on mobile: bell + hamburger -->
        <div class="d-flex align-items-center ms-auto d-lg-none">
            <!-- Mobile bell -->
            <AuthorizeView>
                <Authorized Context="userContext">
                    <AuthorizeView Roles="User">
                        <Authorized>
                            <NavLink class="nav-link position-relative p-0 me-2" href="messages" style="display:flex; align-items:center;">
                                <i class="bi bi-bell fs-5 text-white"></i>

                                @if (unreadCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @unreadCount
                                    </span>
                                }
                            </NavLink>
                        </Authorized>
                    </AuthorizeView>
                </Authorized>
            </AuthorizeView>

            <!-- Hamburger (mobile only) -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <!-- Collapsible menu -->
        <div class="collapse navbar-collapse" id="mainNavbar">
            <!-- Left side nav links -->
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <!-- Desktop bell -->
                <AuthorizeView>
                    <Authorized Context="userContext">
                        <AuthorizeView Roles="User">
                            <Authorized>
                                <li class="nav-item d-none d-lg-flex align-items-center position-relative">
                                    @if (unreadCount > 0)
                                    {
                                        <NavLink class="nav-link position-relative" href="messages">
                                            <i class="bi bi-bell"></i>
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                @unreadCount
                                            </span>
                                        </NavLink>
                                    }
                                    else
                                    {
                                        <span class="nav-link position-relative">
                                            <i class="bi bi-bell"></i>
                                        </span>
                                    }
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </Authorized>
                </AuthorizeView>
                <AuthorizeView>
                    <Authorized Context="userContext">
                        <AuthorizeView Roles="Administrator">
                            <Authorized>
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="appusers">
                                        User Management
                                    </NavLink>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="listings">
                                Listings
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="matches">
                                Matches
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="messages">
                                Messages
                            </NavLink>
                        </li>                      
                    </Authorized>
                </AuthorizeView>
            </ul>

            <!-- Right side: auth section -->
            <AuthorizeView>
                <Authorized Context="userContext">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Account/Manage">
                                @displayName
                            </NavLink>
                        </li>
                        <li class="nav-item align-content-center">
                            <form class="d-inline" action="Account/Logout" method="post">
                                <AntiforgeryToken />
                                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                <button type="submit" class="btn btn-link nav-link p-0">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </Authorized>

                <NotAuthorized>
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Account/Register">
                                Register
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Account/Login">
                                Login
                            </NavLink>
                        </li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private string? currentUrl;
    private int unreadCount;
    private string? displayName;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;

        var user = (await Auth.GetAuthenticationStateAsync()).User;
        if (!user.Identity?.IsAuthenticated ?? true) return;

        var aspNetUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        await using var db = await DbFactory.CreateDbContextAsync();

        var myAppUserId = await db.AppUser
            .Where(u => u.AspNetUserId == aspNetUserId)
            .Select(u => u.Id)
            .SingleOrDefaultAsync();

        var identityUser = await db.Users
            .Where(u => u.Id == aspNetUserId)
            .Select(u => u.FullName)
            .SingleOrDefaultAsync();

        displayName = identityUser ?? user.Identity?.Name;

        unreadCount =
            await (from msg in db.Messages
                join match in db.Matches on msg.MatchId equals match.Id
                join listing in db.Listings on match.ListingId equals listing.Id
                let receiverId = (msg.SenderUserId == match.MatcherUserId) ? listing.UserId : match.MatcherUserId
                where !msg.IsRead && receiverId == myAppUserId
                select msg.Id)
                .CountAsync();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }
   
    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
